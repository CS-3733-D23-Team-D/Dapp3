<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" minHeight="300.0" minWidth="600.0" spacing="10.0" style="-fx-background-radius: 16; -fx-border-radius: 16;" styleClass="surface-container-highest" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" stylesheets="@../stylesheets/TextField.css" text="Create a new Alert" VBox.vgrow="ALWAYS">
         <styleClass>
            <String fx:value="primary-text-container" />
            <String fx:value="headline-large" />
         </styleClass></Label>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0" style="-fx-background-radius: 16;">
            <children>
                <DatePicker promptText="Start Date" stylesheets="@../stylesheets/dateBox.css" />
                <DatePicker promptText="End Date" stylesheets="@../stylesheets/dateBox.css" />
            </children>
        </HBox>
        <TextField promptText="Announcement" stylesheets="@../stylesheets/TextField.css">
         <styleClass>
            <String fx:value="popup" />
            <String fx:value="label-large" />
            <String fx:value="primary-container" />
         </styleClass>
        </TextField>
        <TextArea prefHeight="200.0" prefWidth="200.0" promptText="Description" style="-fx-background-radius: 8; -fx-border-radius: 8;" stylesheets="@../stylesheets/TextField.css" VBox.vgrow="ALWAYS">
         <styleClass>
            <String fx:value="popup" />
            <String fx:value="label-med" />
            <String fx:value="primary-container" />
             <String fx:value="text-area" />
         </styleClass>
        </TextArea>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <children>
                <ComboBox promptText="Employee Type" stylesheets="@../stylesheets/combo.css" HBox.hgrow="ALWAYS" />
                <ComboBox promptText="Urgency" stylesheets="@../stylesheets/combo.css" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="47.0" prefWidth="580.0" spacing="50.0">
            <children>
                <MFXButton stylesheets="@../stylesheets/button.css" text="Cancel">
                    <font>
                        <Font name="Roboto" size="36.0" />
                    </font>
                    <styleClass>
                        <String fx:value="display-med" />
                        <String fx:value="primary" />
                        <String fx:value="outline" />
                    </styleClass>
                </MFXButton>
                <MFXButton stylesheets="@../stylesheets/button.css" text="Submit">
                    <font>
                        <Font name="Roboto" size="36.0" />
                    </font>
                    <styleClass>
                        <String fx:value="display-med" />
                        <String fx:value="primary" />
                        <String fx:value="outline" />
                    </styleClass>
                </MFXButton>
            </children>
        </HBox>
    </children>
   <stylesheets>
      <URL value="@../stylesheets/Colors/lightTheme.css" />
      <URL value="@../stylesheets/Colors/darkTheme.css" />
   </stylesheets>
</VBox>
