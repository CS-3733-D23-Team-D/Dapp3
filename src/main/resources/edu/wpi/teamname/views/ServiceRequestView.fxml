                              </VBox.margin></ComboBox>
                           <Label text="Request Status" textFill="#001b3b">
                              <font>
                                 <Font size="20.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <ComboBox fx:id="requestStatusCombo" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="71.0" prefWidth="206.0" stylesheets="@../stylesheets/combo.css">
