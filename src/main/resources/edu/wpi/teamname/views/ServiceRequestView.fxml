                              </opaqueInsets>
                              <VBox.margin>
                                 <Insets bottom="24.0" right="10.0" />
                              </VBox.margin>
                           </TextField>
                        </children>
                     </VBox>
                     <TableView fx:id="serviceRequestTable" layoutX="243.0" layoutY="14.0">
                       <columns>
                           <TableColumn fx:id="requestIDCol" minWidth="0.0" prefWidth="148.5" style="-fx-background-color: #D5E3FF;" text="Request ID" />
