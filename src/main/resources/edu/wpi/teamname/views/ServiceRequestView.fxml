<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.tableview2.*?>

<?import org.controlsfx.control.SearchableComboBox?>
<AnchorPane styleClass="body" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamname.controllers.ServiceRequestViewController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox HBox.hgrow="ALWAYS">
                <children>
                    <AnchorPane VBox.vgrow="ALWAYS">
                  <children>
                     <VBox layoutX="14.0" layoutY="3.0">
                        <children>
                           <Label text="Request Type" textFill="#001b3b">
                              <font>
                                  <Font name="Roboto" size="28.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <ComboBox fx:id="requestTypeCombo" prefHeight="71.0" prefWidth="396.0" promptText="Choose Request Type" styleClass="combo-box" stylesheets="@../stylesheets/combo.css">
                              <VBox.margin>
                                 <Insets bottom="24.0" />
                              </VBox.margin></ComboBox>
                           <Label text="Request Status" textFill="#001b3b">
                              <font>
                                  <Font name="Roboto" size="28.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <ComboBox fx:id="requestStatusCombo" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="71.0" prefWidth="396.0" promptText="Choose Status" stylesheets="@../stylesheets/combo.css">
                              <VBox.margin>
                                 <Insets bottom="24.0" />
                              </VBox.margin></ComboBox>
                           <Label text="Request ID" textFill="#001b3b">
                              <font>
                                  <Font name="Roboto" size="28.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <SearchableComboBox fx:id="requestIDText" maxWidth="-Infinity" prefHeight="50.0" prefWidth="396.0" style="-fx-background-color: #D9E3F8;">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <VBox.margin>
                                 <Insets bottom="24.0" right="10.0" />
                              </VBox.margin>
                           </SearchableComboBox>
                           <Label text="Assign Staff" textFill="#001b3b">
                              <font>
                                  <Font name="Roboto" size="28.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <SearchableComboBox fx:id="assignStaffText" maxWidth="-Infinity" prefHeight="50.0" prefWidth="396.0" style="-fx-background-color: #D9E3F8;">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <VBox.margin>
                                 <Insets bottom="24.0" right="10.0" />
                              </VBox.margin>
                           </SearchableComboBox>
                           <Label text="Set Request Status" textFill="#001b3b">
                              <font>
                                 <Font name="Roboto" size="28.0" />
                              </font>
                              <VBox.margin>
                                 <Insets bottom="12.0" />
                              </VBox.margin>
                           </Label>
                           <SearchableComboBox fx:id="requestStatusText" maxWidth="-Infinity" prefHeight="50.0" prefWidth="396.0" style="-fx-background-color: #D9E3F8;">
                              <opaqueInsets>
                                 <Insets />
                              </opaqueInsets>
                              <VBox.margin>
                                 <Insets bottom="24.0" right="10.0" />
                              </VBox.margin>
                           </SearchableComboBox>
                        </children>
                     </VBox>
                  </children></AnchorPane>
                    <HBox fillHeight="false" prefHeight="31.0" prefWidth="420.0" spacing="30.0" VBox.vgrow="NEVER">
                        <children>
                            <MFXButton fx:id="submitButton" mnemonicParsing="false" style="-fx-background-color: #003da6;" text="Assign" textFill="WHITE">
                                <font>
                                    <Font name="Times New Roman" size="32.0" />
                                </font>
                            </MFXButton>
                        </children>
                        <padding>
                            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                        </padding>
                    </HBox>
                </children>
            </VBox>
         <FilteredTableView fx:id="table">
            <columns>
               <FilteredTableColumn fx:id="requestIDCol" minWidth="0.0" prefWidth="148.5" style="-fx-background-color: #D5E3FF;" text="Request ID" />
               <FilteredTableColumn fx:id="patientNameCol" prefWidth="148.5" style="-fx-background-color: #D9E3F8;" text="Patient Name" />
               <FilteredTableColumn fx:id="roomNumCol" prefWidth="148.5" style="-fx-background-color: #D5E3FF;" text="Room #" />
               <FilteredTableColumn fx:id="requesterIDCol" prefWidth="148.5" style="-fx-background-color: #D9E3F8;" text="Requester ID" />
               <FilteredTableColumn fx:id="requestedAtCol" prefWidth="148.5" style="-fx-background-color: #D5E3FF;" text="Requested At" />
             <FilteredTableColumn fx:id="requestedForCol" prefWidth="148.5" style="-fx-background-color: #D9E3F8;" text="Requested For" />
             <FilteredTableColumn fx:id="assignedStaffCol" prefWidth="148.5" style="-fx-background-color: #D5E3FF;" text="Assigned Staff" />
               <FilteredTableColumn fx:id="statusCol" prefWidth="148.5" style="-fx-background-color: #D9E3F8;" text="Status" />
            </columns>
            <HBox.margin>
               <Insets right="10.0" />
            </HBox.margin>
         </FilteredTableView>
        </HBox>
    </children>
</AnchorPane>
