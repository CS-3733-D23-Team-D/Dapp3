<HBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamname.controllers.MapController">
   <children>
      <AnchorPane prefHeight="340.0" prefWidth="300.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="323.0" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <ComboBox fx:id="selectTable" promptText="Choose Table To Import/Export" style="-fx-background-color: #D5E3ff;" stylesheets="@../stylesheets/combo.css">
<!--                      <font>-->
<!--                          <Font name="Roboto" size="16.0" />-->
<!--                      </font>-->
                  </ComboBox>

                  <HBox prefHeight="0.0" prefWidth="0.0" spacing="20.0">
                     <children>
                        <MFXButton fx:id="importButton" style="-fx-background-color: #D5E3ff;" text="Import">
                           <font>
                              <Font name="Roboto" size="16.0" />
                           </font></MFXButton>
                        <MFXButton fx:id="exportButton" style="-fx-background-color: #D5E3ff;" text="Export">
                           <font>
                              <Font name="Roboto" size="16.0" />
                           </font></MFXButton>
                     </children>
                  </HBox>
                  <MFXButton fx:id="addNodeButton" style="-fx-background-color: #D5E3ff;" text="AddNode">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </MFXButton>
                  <MFXButton fx:id="addLocationButton" style="-fx-background-color: #D5E3ff;" text="AddLocation">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </MFXButton>
                  <MFXButton fx:id="toggleTableButton" style="-fx-background-color: #D5E3ff;" text="Modify/Remove Locatoins">
                     <font>
                        <Font name="Roboto" size="16.0" />
                     </font>
                  </MFXButton>
               </children>
               <padding>
                  <Insets left="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
      </AnchorPane>
      <AnchorPane id="AP" HBox.hgrow="ALWAYS">
          <children>
              <StackPane fx:id="sp" prefHeight="340.0" prefWidth="500.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <children>
                      <GesturePane fx:id="gp" prefHeight="340.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
                          <content>
                              <Group>
                                  <children>
                                      <AnchorPane fx:id="anchor" prefHeight="3400.0" prefWidth="5000.0" styleClass="body" stylesheets="@../stylesheets/scaleFull.css" visible="true" />
                                  </children>
                              </Group>
                          </content>
                      </GesturePane>
                      <Canvas fx:id="canvas" disable="true" height="340.0" visible="false" width="500.0" />
                  <TableView fx:id="table" prefHeight="401.0" prefWidth="401.0" visible="false">
                     <columns>
                        <TableColumn fx:id="longNameColumn" prefWidth="52.666656494140625" text="longName" />
                        <TableColumn fx:id="shortNameColumn" prefWidth="64.0" text="shortName" />
                        <TableColumn fx:id="nodeTypeColumn" prefWidth="62.0" text="nodeType" />
                     </columns>
                  </TableView>
                  </children>
              </StackPane>
          </children>
      </AnchorPane>
   </children>
