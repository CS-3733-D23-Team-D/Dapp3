<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="16.0" style="-fx-border-width: 2; -fx-border-radius: 8;" stylesheets="@../stylesheets/Colors/lightTheme.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
      <HBox spacing="10.0">
         <children>
            <MFXButton alignment="BASELINE_LEFT" style="-fx-background-radius: 8; -fx-border-radius: 8;" text="Cancel" textFill="#fffbfb">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
               <padding>
                  <Insets bottom="4.0" left="16.0" right="16.0" top="4.0" />
               </padding>
               <styleClass>
                  <String fx:value="outline" />
                  <String fx:value="primary-container" />
               </styleClass>
            </MFXButton>
                <MFXButton alignment="BASELINE_LEFT" style="-fx-background-radius: 8; -fx-border-radius: 8;" text="Confirm" textFill="#fffbfb">
                    <font>
                        <Font name="Roboto" size="12.0" />
                    </font>
                    <padding>
                        <Insets bottom="4.0" left="16.0" right="16.0" top="4.0" />
                    </padding>
                    <styleClass>
                        <String fx:value="outline" />
                        <String fx:value="primary" />
                    </styleClass>
                </MFXButton>
         </children>
      </HBox>
    </children>
    <styleClass>
        <String fx:value="outline" />
        <String fx:value="surface-container-low" />
    </styleClass>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
