<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="0.0" prefWidth="300.0" spacing="10.0" style="-fx-background-color: #E3E2E6;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <children>
                <Label text="Start Node ID">
                    <font>
                        <Font name="Roboto" size="13.0" />
                    </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Label>
                <TextField style="-fx-background-color: D5E3ff; -fx-background-radius: 10;" styleClass="text-field" stylesheets="@../stylesheets/TextField.css" />
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <children>
                <Label text="End Node ID">
                    <font>
                        <Font name="Roboto" size="13.0" />
                    </font>
               <HBox.margin>
                  <Insets left="3.0" />
               </HBox.margin>
            </Label>
                <TextField style="-fx-background-color: D5E3ff; -fx-background-radius: 10;" styleClass="text-field" stylesheets="@../stylesheets/TextField.css">
               <HBox.margin>
                  <Insets left="2.5" />
               </HBox.margin>
            </TextField>
            </children>
        </HBox>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
            <children>
                <MFXButton style="-fx-background-color: #012D5A; -fx-background-radius: 5;" stylesheets="@../stylesheets/textOutline.css" text="Remove Edge" textFill="WHITE">
               <HBox.margin>
                  <Insets />
               </HBox.margin></MFXButton>
                <MFXButton alignment="TOP_RIGHT" style="-fx-background-color: #012D5A; -fx-background-radius: 5;" styleClass="text-field" stylesheets="@../stylesheets/Colors/lightCombo.css" text="Submit" textFill="WHITE">
               <font>
                  <Font name="Roboto" size="12.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin></MFXButton>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
