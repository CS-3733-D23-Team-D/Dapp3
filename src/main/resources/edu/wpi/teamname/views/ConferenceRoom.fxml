<AnchorPane styleClass="body" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.teamname.controllers.ConferenceController">
    <children>
        <HBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <VBox HBox.hgrow="ALWAYS">
                <children>
                    <AnchorPane VBox.vgrow="ALWAYS">
                        <children>
                            <VBox layoutX="14.0" layoutY="-11.0" spacing="12.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0">
                                <children>
                                    <Label text="Date" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <DatePicker fx:id="dateBox" prefHeight="50.0" prefWidth="396.0" style="-fx-background-color: #D5E3FF;" styleClass="text-field" stylesheets="@../stylesheets/dateBox.css" />
                                    <Label text="Building" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <ComboBox fx:id="buildingBox" prefHeight="50.0" prefWidth="396.0" promptText="Choose Building" stylesheets="@../stylesheets/combo.css">
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin></ComboBox>
                                    <Label text="Start Time" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
