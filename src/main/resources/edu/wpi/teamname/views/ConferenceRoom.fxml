                                    </Label>
                                    <ComboBox fx:id="endBox" prefHeight="50.0" prefWidth="396.0" promptText="Choose End Time" stylesheets="@../stylesheets/combo.css" />
                                    <Label text="Room Size" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                    </Label>
                                    <RangeSlider fx:id="sizeSlider" highValue="20.0" lowValue="2.0" majorTickUnit="5.0" max="50.0" prefHeight="50.0" prefWidth="396.0" showTickLabels="true" showTickMarks="true">
                                        <padding>
                                            <Insets left="12.0" right="12.0" />
                                        </padding>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </RangeSlider>
                                    <Label text="Name" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <TextField fx:id="nameText" maxWidth="-Infinity" prefHeight="50.0" prefWidth="396.0" style="-fx-background-color: #D5E3FF; -fx-border-radius: 8; -fx-background-radius: 9; -fx-border-color: #6F797A;" stylesheets="@../stylesheets/RowLabel.css">
                                        <opaqueInsets>
                                            <Insets />
                                        </opaqueInsets>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </TextField>
                                    <Label text="Room" textFill="#001b3b">
                                        <font>
                                            <Font name="Roboto" size="28.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <ComboBox fx:id="roomBox" layoutX="10.0" layoutY="158.0" prefHeight="50.0" prefWidth="396.0" promptText="Choose Room" stylesheets="@../stylesheets/combo.css" />
                                    <MFXButton fx:id="submitButton" mnemonicParsing="false" stylesheets="@../stylesheets/blueButton.css" text="Request">
                                        <font>
                                            <Font name="Times New Roman" size="32.0" />
                                        </font>
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </MFXButton>
                                </children>
                                <padding>
                                    <Insets left="12.0" right="12.0" />
                                </padding>
                            </VBox>
                        </children></AnchorPane>
                    <HBox fillHeight="false" spacing="30.0" VBox.vgrow="NEVER">
                        <padding>
                            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                        </padding>
                    </HBox>
                </children>
            </VBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" HBox.hgrow="ALWAYS">
                <HBox.margin>
                    <Insets right="10.0" />
                </HBox.margin>
                <content>
                    <VBox fx:id="viewBox" prefHeight="931.0" prefWidth="0.0" />
                </content>
            </ScrollPane>
