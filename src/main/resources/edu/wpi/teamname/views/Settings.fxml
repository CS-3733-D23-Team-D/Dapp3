               <styleClass>
                  <String fx:value="primary-text" />
                  <String fx:value="headline-large" />
               </styleClass>
            </Label>
            <HBox alignment="CENTER_LEFT" prefHeight="64.0" prefWidth="472.0" spacing="24.0">
