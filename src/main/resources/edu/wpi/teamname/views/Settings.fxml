                  <String fx:value="primary-text" />
                  <String fx:value="headline-large" />
               </styleClass>

            </Label>
            <ComboBox fx:id="songCombo" minHeight="31.0" prefHeight="31.0" prefWidth="165.0" stylesheets="@../stylesheets/comboSmall.css">
