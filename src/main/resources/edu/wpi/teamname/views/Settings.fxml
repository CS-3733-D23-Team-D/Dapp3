               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
            </CheckBox>
            <MFXButton fx:id="feedbackButton" prefHeight="46.0" prefWidth="361.0" stylesheets="@../stylesheets/button.css" text="Soumettre des commentaires">
